<Window x:Class="ProductLifecycleManagement.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="Admin Dashboard" 
                       FontSize="18" TextAlignment="Center" Margin="10" />
            <TabControl>
                <TabItem Header="Products">
                    <Grid>
                        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="True" Margin="10" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                           <!--<Button Content="Add Product" Click="AddProduct_Click" Margin="5" /> 
                            <Button Content="Edit Product" Click="EditProduct_Click" Margin="5" />-->
                            <Button Content="Delete Product" Click="DeleteProduct_Click" Margin="5" />
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="History">
                    <Grid>
                        <DataGrid x:Name="HistoryGrid" AutoGenerateColumns="True" Margin="10" />
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
