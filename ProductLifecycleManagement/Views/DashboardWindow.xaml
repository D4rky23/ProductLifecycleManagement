<Window x:Class="ProductLifecycleManagement.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        WindowStartupLocation="CenterScreen" Width="1000" Height="600"
        Background="#F4F4F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#2C3E50" CornerRadius="10" Padding="10" Grid.Row="0">
            <TextBlock Text="Dashboard" FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
            <StackPanel Margin="10">
                <!-- Secțiuni pentru vizualizarea statisticilor -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Product Statistics" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Total Products: ..." FontSize="16" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="Active Products: ..." FontSize="16" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="Inactive Products: ..." FontSize="16" Foreground="#2C3E50" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Alte secțiuni pentru vizualizarea datelor relevante -->
                <!-- Ex: Orders, Users, etc. -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
