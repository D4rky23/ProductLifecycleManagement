<Window x:Class="ProductLifecycleManagement.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help"
        WindowStartupLocation="CenterScreen" Width="800" Height="600"
        Background="#F4F4F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2C3E50" CornerRadius="10" Padding="10" Grid.Row="0">
            <TextBlock Text="Help" FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
            <StackPanel Margin="10">
                <!-- Introducere -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Introduction" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Welcome to the Product Lifecycle Management application. This application helps you manage product data efficiently. Here you will find useful information about how to use the application." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigare -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Navigation" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="To navigate through the application, use the sidebar on the left. You can access the Dashboard, Product Management, Reports, Settings, Help, and Logout options." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Funcționalități -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Features" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Product Management: Add, edit, and delete products using the form provided. Make sure to fill out all required fields before submitting." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="Reports: View and analyze various reports related to product data." TextWrapping="Wrap" Foreground="#2C3E50" Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Sfaturi și Trucuri -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Tips &amp; Tricks" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Use the 'Clear' button to reset the form fields before adding or editing a new product." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="Regularly check the Reports section to monitor the performance of your product data." TextWrapping="Wrap" Foreground="#2C3E50" Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Întrebări Frecvente -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Frequently Asked Questions (FAQ)" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Q: How do I add a new product?" FontWeight="Bold" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="A: Go to the Product Management section, fill out the form with the necessary details, and click 'Add'." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="TIP: The BOM ID must exist in the BOM table and not be associated with any product." TextWrapping="Wrap" Foreground="#2C3E50" Margin="10,0,0,0"/>

                        <TextBlock Text="Q: How do I edit an existing product?" FontWeight="Bold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                        <TextBlock Text="A: Select a product from the list, update the fields in the form, and click 'Edit'." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                        <TextBlock Text="TIP: You cannot change the existing BOM ID." TextWrapping="Wrap" Foreground="#2C3E50" Margin="10,0,0,0"/>

                        <TextBlock Text="Q: How do I delete a product?" FontWeight="Bold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                        <TextBlock Text="A: Select the product you want to delete and click 'Delete'." TextWrapping="Wrap" Foreground="#2C3E50" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Button Content="Home" Background="#16A085" Foreground="White" FontSize="16" Padding="10" Margin="0,10,0,0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="HomeButton_Click"/>
    </Grid>
</Window>
